{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "local>ashleycaselli/renovate-config"
  ],
  "packageRules": [
    {
      "description": "Trigger a patch update if any Dockerfile gets updated",
      "matchFileNames": [
        "**/Dockerfile"
      ],
      "groupName": "All Dockerfile changes",
      "semanticCommitScope": "core-deps"
    }
  ]
}